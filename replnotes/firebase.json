{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": []
  },
  "hosting": {
    "public": "static",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      {
        "source": "**",
        "destination": "logo.png",
        "type": 301
      },
      {
        "source": "tinywebapps.com/:path",
        "destination": "/admin/:path",
        "type": 301
      },
      {
        "source": "user.tinywebapps.com/:path",
        "destination": "/user/:path",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "replnotes",
          "region": "us-central1"
        }
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 10000
    },
    "functions": {
      "port": 10001
    },
    "firestore": {
      "port": 10002
    },
    "hosting": {
      "port": 10003
    },
    "ui": {
      "enabled": true,
      "port": 10004
    }
  }
}
