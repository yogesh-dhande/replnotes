# For custom domains like yogesh.page
:443 {
  tls {
    on_demand
  }
  reverse_proxy replnotes:8080
}

# For autogenerated user domains like yogesh.replnotes.com
*.tinywebapps.com {
  tls {
    on_demand
  }
  reverse_proxy replnotes:8081
}


